{% extends 'admin/layout/admin.html.twig' %}

{% block content %}
    <h1>Spieler</h1>
    <h2>Banner</h2>

    <p>Banner werden jeweils beim Aktualisieren der Punkte neu generiert.</p>

    {% for nick,banner in banners %}
        {% if banner %}
            <img src="{{ banner.url }}" alt="Banner" style="width:{{ width }}'px;height:{{ height }}px;" />
        {% else %}
            <div style="display:inline-block; width:{{ width }}px;height:{{ height }}px;">Banner fÃ¼r <b>{{ nick }}</b> existiert nicht!</div>
        {% endif %}
    {% endfor %}
{% endblock %}

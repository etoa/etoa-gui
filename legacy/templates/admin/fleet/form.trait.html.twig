            {{ form_row(form.entityTo, {label: false}) }}
        </td>
    </tr>

    <tr>
        <th class="tbltitle">{{ form_label(form.action) }}</th>
        <td class="tbldata">
            <div class="inline-block">
                {{ form_row(form.action, {label: false}) }}
            </div>
            <div class="inline-block">
                {{ form_row(form.status) }}
            </div>
        </td>
    </tr>

    <tr><td style="background:#000;height:2px;" colspan="2"></td></tr>

    <tr>

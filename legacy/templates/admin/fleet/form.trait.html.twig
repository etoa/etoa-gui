{% block form %}
{{ form_start(form) }}

<table class="tbl">
    <tr>
        <th class="tbltitle">{{ form_label(form.userId) }}</th>
        <td class="tbldata">
            {{ form_row(form.userId, {label: false}) }}
        </td>
    </tr>

    <tr>
        <th class="tbltitle">{{ form_label(form.launchTime) }}</th>
        <td class="tbldata">
            {{ form_errors(form.launchTime) }}
            {{ form_widget(form.launchTime) }}
        </td>
    </tr>
    <tr>
        <th class="tbltitle">{{ form_label(form.landTime) }}</th>
        <td class="tbldata">
            {{ form_errors(form.landTime) }}
            {{ form_widget(form.landTime) }}
        </td>
    </tr>
    {% if fleet is defined %}
        <tr>
            <th class="tbltitle">Flugdauer</th>
            <td class="tbldata">
                {{ formatTimespan(fleet.landTime - fleet.launchTime) }}
            </td>
        </tr>
    {% endif %}

    <tr>
        <th class="tbltitle">{{ form_label(form.entityFrom) }}</th>
        <td class="tbldata">
            {{ form_row(form.entityFrom, {label: false}) }}
        </td>

    <tr><td style="background:#000;height:2px;" colspan="2"></td></tr>

    <tr>
        <th class="tbltitle">{{ form_label(form.ships) }}</th>
        <td class="tbldata" data-controller="collection">
            <div>{{ form_errors(form.ships) }}</div>
            <div data-collection-target="container">
                {% for rows in form.ships %}
                    <div {% if loop.index == 1 %} data-collection-target="prototype"{% endif %}>
                        {% for element in rows %}
                            <div class="inline-block">
                                {{ form_row(element) }}
                            </div>
                        {% endfor %}
                        <div class="inline-block{% if loop.index  == 1 %} hide{% endif %}">
                            <button type="button" data-action="click->collection#removeEntry">Löschen</button>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <button type="button" data-action="click->collection#addEntry">Hinzufügen</button>
        </td>
    </tr>
</table>
<br/>

{% block actions %}{% endblock %}

{{ form_end(form) }}
{% endblock %}

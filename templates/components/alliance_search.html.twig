{% extends 'components/base_search.html.twig' %}

{% block data %}
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Gründer</th>
        <th>Gründung</th>
        <th>Rang</th>
        <th>Punkte</th>
        <th>Mitglieder</th>
        <th style="width:150px;">Aktionen</th>
    </tr>
    {% for alliance in search.entries %}
        <tr>
            <td>{{ alliance.id }}</td>
            <td><a href="{{ path('admin.alliances.view', {id: alliance.id}) }}">{{ alliance.nameWithTag }}</a></td>
            <td>{{ this.users[alliance.founderId]|default('Niemand') }}</td>
            <td>{{ formatTimestamp(alliance.foundationTimestamp) }}</td>
            <td>{{ alliance.currentRank }}</td>
            <td>{{ alliance.points }}</td>
            <td>{{ alliance.memberCount }}</td>
            <td>
                <a href="{{ path('admin.alliances.edit', {id: alliance.id}) }}">Bearbeiten</a>
                <a href="{{ path('admin.alliances.delete', {id: alliance.id}) }}">Löschen</a>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

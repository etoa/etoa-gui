{% extends 'layout/external.html.twig' %}

{% block content %}
    {% if error %}
        <twig:alert type="error" title="Loginfehler">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </twig:alert>
    {% endif %}

    <form action="{{ path('game.login.check') }}" method="post" class="login_form">
        <p>Willkommen in der {{ roundName }}. Bitte melde dich mit deinen Logindaten an:</p>
        <p>
            <label for="login_nick">Benutzername</label>
            <input type="text" name="login_nick" id="login_nick" value="{{ lastUsername }}" maxlength="255" size="25"
                   required autofocus/>
        </p>
        <p>
            <label for="login_pw">Passwort</label>
            <input type="password" name="login_pw" id="login_pw" maxlength="255" size="25" required/>
        </p>
        <p class="buttons">
            <input type="submit" name="login_submit" value="Login"/> &nbsp;
        </p>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('player_authenticate') }}">
    </form>
{% endblock %}

{% extends 'game/alliance/allianceboard/allianceboard.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block allianceboard %}
    <h2>Beitrag bearbeiten</h2>
    {% if msg.success is defined %}
        {{ macros.successMessage(msg.success) }}
    {% endif %}

    {{ form_start(form) }}
        <twig:Table>
        {% block table_content %}
            <tr>
                <th>Text:</th>
                <td>
                    {{ form_widget(form.postText) }}
                </td>
            </tr>
        {% endblock %}
        </twig:Table>
        {{ form_widget(form.postEdit) }}
        <a href="{{ path('game.alliance.allianceboard.showposts',{id:app.request.attributes.get('_route_params').id}) }}">
            <input type="button" value="Abbrechen"/>
        </a>
    {{ form_end(form) }}

{% endblock %}
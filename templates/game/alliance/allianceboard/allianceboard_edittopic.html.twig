{% extends 'game/alliance/allianceboard/allianceboard.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block allianceboard %}
    <h2>Thema bearbeiten</h2>
    {% if msg.success is defined %}
        {{ macros.successMessage(msg.success) }}
    {% endif %}

    {{ form_start(form) }}
        <twig:Table>
        {% block table_content %}
            <tr>
                <th>Titel:</th>
                <td>
                    {{ form_widget(form.topicSubject) }}
                </td>
            </tr>
            {% if isAdmin %}
                <tr>
                    <th>Top-Thema:</th>
                    <td>
                        {{ form_widget(form.topicTop) }}
                    </td>
                </tr>
                <tr>
                    <th>Geschlossen:</th>
                    <td>
                        {{ form_widget(form.topicClosed) }}
                    </td>
                </tr>
                <tr>
                    <th>Kategorie:</th>
                    <td>{{ form_widget(form.topicCatId) }}</td>
                </tr>
            {% endif %}
        {% endblock %}
        </twig:Table>
        {{ form_widget(form._token) }}
        {{ form_widget(form.topicEdit) }}
        <a href="{{ path('game.alliance.allianceboard.showtopics',{id:app.request.attributes.get('_route_params').id}) }}">
            <input type="button" value="Abbrechen"/>
        </a>
    {{ form_end(form,{render_rest: false}) }}

{% endblock %}
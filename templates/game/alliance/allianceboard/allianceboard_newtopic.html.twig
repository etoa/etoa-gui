{% extends 'game/alliance/allianceboard/allianceboard.html.twig' %}
{% import 'macros.html.twig' as macros %}

{% block allianceboard %}
    {% if msg.success is defined %}
        {{ macros.successMessage(msg.success) }}
    {% endif %}
    <h2>
        <a href="{{ path('game.alliance.allianceboard.overview') }}">Übersicht</a> > <a href="{{ path('game.alliance.allianceboard.showtopics',{id:category.id}) }}"> {{ category.name }}</a> > Neues Thema:
    </h2>
    {{ form_start(form) }}
        <twig:Table>
        {% block table_content %}
            <tr>
                <th>Titel:</th>
                <td>
                    {{ form_widget(form.topicSubject) }}
                </td>
            </tr>
            <tr>
                <th>Text:</th>
                <td>
                    {{ form_widget(form.postText) }}
                </td>
            </tr>
        {% endblock %}
        </twig:Table>
        {{ form_widget(form.submit) }} &nbsp;
        <a href="{{ path('game.alliance.allianceboard.showtopics',{'id':category.id}) }}" onclick="return confirm('Soll die Erstellung des Themas abgebrochen werden?')">
            <input type="button" value="Zurück" />
        </a>
    {{ form_end(form) }}
{% endblock %}
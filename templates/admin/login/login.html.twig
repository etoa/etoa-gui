{% extends 'admin/layout/login.html.twig' %}

{% block content %}
    <h2>Admin Login</h2>

    {% if error %}
        <twig:alert type="error">{{ error.messageKey|trans(error.messageData, 'security') }}</twig:alert>
    {% endif %}

    <form action="{{ path('admin.login.check') }}" method="post" class="login_form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_authenticate') }}">
        <table>
            <tr>
                <td><label for="login_nick">Benutzername</label></td>
                <td>
                    <input type="text" name="login_nick" id="login_nick" value="{{ lastUsername }}" maxlength="255"
                           size="25" required autofocus/>
                </td>
            </tr>
            <tr>
                <td><label for="login_pw">Passwort</label></td>
                <td>
                    <input type="password" name="login_pw" id="login_pw" maxlength="255" size="25" required/>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" name="login_submit" value="Login"/></td>
            </tr>
        </table>
    </form>

    <p>
        <a href="{{ path('admin.login.reset') }}">Passwort vergessen</a> |
        <a href="{{ path('game.login') }}">Zum Spiel-Login</a>
    </p>
{% endblock %}

{% extends 'admin/layout/login.html.twig' %}

{% block content %}
    <h2>Admin Login</h2>

    {% if error %}
        <twig:alert type="error">{{ error.messageKey|trans(error.messageData, 'security') }}</twig:alert>
    {% endif %}

    <form action="{{ path('admin.login.check') }}" method="post" class="login_form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('admin_authenticate') }}">
        <p>
            <label for="login_nick">Benutzername</label>
            <input type="text" name="login_nick" id="login_nick" value="{{ lastUsername }}" maxlength="255" size="25"
                   required autofocus/>
        </p>
        <p>
            <label for="login_pw">Passwort</label>
            <input type="password" name="login_pw" id="login_pw" maxlength="255" size="25" required/>
        </p>
        <p class="buttons">
            <input type="submit" name="login_submit" value="Login"/> &nbsp;
            <a href="{{ path('admin.login.reset') }}" class="button">Passwort vergessen</a> &nbsp;
            <a href="{{ path('game.login') }}" class="button">Zum Spiel-Login</a>
        </p>
    </form>
{% endblock %}

{% extends 'admin/layout/admin.html.twig' %}

{% block content %}
    <h1>Datenbank</h1>
    <h2>Backups</h2>

    <form id="bustn" action="{{ path('admin.db.backup.settings') }}" method="post">
        <fieldset>
            <legend>Backup-Einstellungen</legend>
            <label for="backup_dir">Speicherpfad:</label>
            <input type="text" value="{{ configValue('backup_dir') }}" name="backup_dir" id="backup_dir" size="50">
            (leerlassen für Standardpfad)
            <br>
            <label for="backup_retention_time">Aufbewahrungsdauer:</label>
            <input type="text" value="{{ configValue('backup_retention_time') }}" name="backup_retention_time"
                   id="backup_retention_time" size="2"> Tage<br>
            GZIP benutzen:
            <label><input type="radio" name="backup_use_gzip" value="1"
                          {% if configValue('backup_use_gzip') == '1' %}checked="checked"{% endif %}> Ja</label>
            <label><input type="radio" name="backup_use_gzip" value="0"
                          {% if configValue('backup_use_gzip') == '0' %}checked="checked"{% endif %}> Nein</label>
            <br>
            <input type="submit" value="Speichern" name="submit_changes">
        </fieldset>
    </form>

    <p>Im Folgenden sind alle verfügbaren Backups aufgelistet. Backups werden automatisch durch einen periodischen Task
        erstellt.</p>

    <form action="{{ path('admin.db.backup') }}" method="post">
        <p>
            <input type="submit" value="Neues Backup erstellen" name="create"/>
        </p>
    </form>

    {% if backupDir %}
        <h3>Vorhandene Backups in {{ backupDir }}</h3>

        <table class="table">
            <thead>
            <tr>
                <th>Name</th>
                <th>Erstellt</th>
                <th>Grösse</th>
                <th>Optionen</th>
            </tr>
            </thead>
            <tbody>
            {% for backup in backups %}
                <tr>
                    <td>{{ backup.filename }}</td>
                    <td>{{ backup.createdAt }}</td>
                    <td>{{ backup.size }}</td>
                    <td>
                        <a href="{{ path('admin.db.restore', {restorePoint: backup.date }) }}"
                           onclick="return confirm('Soll die Datenbank mit den im Backup {{ backup.date }} gespeicherten Daten überschrieben werden?');">Wiederherstellen</a>
                        &nbsp;
                        <a href="{{ path('admin.db.backups.download', { path: base64(backup.filename) }) }}">Download</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4"><i>Es sind noch keine Dateien vorhanden!</i></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h3>Vorhandene Backups</h3>
        {{ macros.messagebox(errorMessage, 'Das Backupverzeichnis wurde nicht gefunden!') }}
    {% endif %}
{% endblock %}

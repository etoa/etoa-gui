{% extends 'admin/layout/admin.html.twig' %}

{% block content %}
    <h1>Konfiguration</h1>
    <h2>Grundkonfiguration</h2>

    <form action="{{ path('admin.config') }}" method="post">
        <table class="table">
            {% for item in items %}
                <tr>
                    <th>{{ item.label }}</th>
                    <td>{{ item.field|raw }}</td>
                </tr>
            {% endfor %}
        </table>

        <p><input type="submit" name="submit" value="&Uuml;bernehmen"/></p>
    </form>
{% endblock %}

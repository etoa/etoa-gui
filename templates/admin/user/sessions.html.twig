{% set title="Spielersessions" %}

{% extends 'admin/layout/admin.html.twig' %}

{% block content %}

    <p>Es sind {{ sessions|length }} Sessions aktiv. Das User-Timeout beträgt {{ formatTimespan(timeout) }}</p>

    <form method="post" action="{{ path('admin.users.sessions.kick-all') }}">
        <input type="submit" value="Alle User kicken">
    </form>

    <table class="table">
        <thead>
        <tr>
            <th>Status</th>
            <th>Nick</th>
            <th>Login</th>
            <th>Aktivität</th>
            <th>Dauer</th>
            <th>IP</th>
            <th>User Agent</th>
            <th>Kicken</th>
        </tr>
        </thead>
        <tbody>
        {% for session in sessions %}
        {% set online = time - timeout < session.timeAction %}
        <tr>
            <td style="color:{% if online %}#0f0{% else %}red{% endif %};">{% if online %}Online{% else %}Timeout{% endif %}</td>
            <td>
                <a href="{{ path('admin.users.view', {id: session.userId}) }}">{{ userNicks[session.userId] }}</a>
            </td>
            <td>{{ formatTimestamp(session.timeLogin) }}</td>
            <td>{{ formatTimestamp(session.timeAction) }}</td>
            <td>{{ formatTimespan(session.timeAction - session.timeLogin) }}</td>
            <td title="{{ ipGetHost(session.ipAddr) }}"><a
                        href="{{ path('admin.users.ips', {ip: session.ipAddr}) }}">{{ session.ipAddr }}</a></td>
            <td title="{{ session.userAgent }}">{{ browser(session.userAgent).toString() }}</td>
            <td>
                <form action="{{ path('admin.users.sessions.kick', {id: session.id}) }}" method="POST"><input
                            type="submit" value="Kick"></form>
            </td>
        </tr>
        </tbody>
        {% else %}
            <tr>
                <td colspan="99999"><i>Keine Einträge vorhanden!</i></td>
            </tr>
        {% endfor %}
    </table>
    
{% endblock %}

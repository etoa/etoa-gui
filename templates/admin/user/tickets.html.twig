{% extends 'admin/layout/admin.html.twig' %}

{% block content %}

    <h1>Tickets des Spielers {{ user.nick }}</h1>

    {{ component('breadcrumbs', { items: [
        { label: 'Spielersuche', url: path('admin.users') },
        { label: user.nick, url: path('admin.users.view', {id: user.id}) },
        { label: 'Tickets', url: path('admin.users.tickets', {id: user.id}) },
    ]}) }}

    {% if tickets|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Status</th>
                <th>Kategorie</th>
                <th>Zugeteilter Admin</th>
                <th>Letzte Ã„nderung</th>
            </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>
                        <a href="{{ path('admin.ticket.details', { id: ticket.id }) }}">{{ ticket.idString }}</a>
                    </td>
                    <td>{{ ticket.statusName }}</td>
                    <td>{{ ticket.categoryName }}</td>
                    <td>{{ ticket.adminName|default('-') }}</td>
                    <td>{{ formatTimestamp(ticket.timestamp) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <twig:alert type="info">Dieser User hat keine Tickets!</twig:alert>
    {% endif %}

{% endblock %}


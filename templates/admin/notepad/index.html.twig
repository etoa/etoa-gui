{% extends 'admin/layout/admin.html.twig' %}

{% block content %}
    <h1>Notizen</h1>

    <table class="table table-autofit">
        {% for note in notes %}
            <tr>
                <th>
                    <a href="{{ path('admin.notepad.edit', {id: note.id}) }}">{{ note.title }}</a>
                </th>
                <td class="absorbing-column">{{ BBCodeToHTML(note.text)|raw }}</td>
                <td>{{ note.date|date("d.m.Y H:i") }}</td>
                <td><a href="{{ path('admin.notepad.delete', {id: note.id}) }}"
                       onclick="return confirm('Eintrag löschen?')">Löschen</a></td>
            </tr>
        {% else %}
            <tr>
                <td> Keine Notiz vorhanden!</td>
            </tr>
        {% endfor %}
    </table>

    <p><a href="{{ path('admin.notepad.new') }}" class="button">Neue Notiz</a></p>
{% endblock %}

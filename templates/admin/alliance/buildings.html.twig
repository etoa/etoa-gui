{% set title="Gebäude der Allianz " ~ alliance.nameWithTag %}

{% extends 'admin/layout/admin.html.twig' %}

{% block breadcrumbs %}
    {{ component('breadcrumbs', { items: [
        { label: 'Allianzsuche', url: path('admin.alliances') },
        { label: alliance.nameWithTag, url: path('admin.alliances.view', {id: alliance.id}) },
        { label: 'Gebäude', url: path('admin.alliances.buildings', {id: alliance.id}) },
    ]}) }}
{% endblock %}

{% block content %}
    <table class="table">
        <thead>
        <tr>
            <th>Gebäude</th>
            <th>Stufe</th>
            <th>Useranzahl</th>
            <th>Status</th>
        </tr>
        </thead>
        <tbody>
        {% for item in buildlist %}
            <tr>
                <td>{{ buildings[item.buildingId] }}</td>
                <td>{{ item.level }}</td>
                <td>{{ item.memberFor }}</td>
                <td>
                    {% if item.buildEndTime > date().timestamp %}
                        Bauen
                    {% elseif item.buildEndTime > 0 %}
                        Bau abgeschlossen
                    {% else %}
                        Untätig
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Keine Gebäude vorhanden!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>Gebäude hinzufügen</h2>
    {{ form(form) }}
{% endblock %}

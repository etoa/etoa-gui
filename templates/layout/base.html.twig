<!doctype html>
<html class="no-js" lang="de" style="font-size: {{ fontSize }}" data-viewportScale="{{ viewportScale }}">
<head>
    <meta charset="utf-8">
    <title>{{ gameTitle|default('EtoA') }}</title>

    <!-- Meta Info -->
    <meta name="description" content="">
    <meta name="author" content="EtoA Gaming"/>
    <meta name="robots" content="nofollow"/>
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('build/images/favicon.ico') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('build/images/favicon.ico') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- CSS Stylesheets -->
    {% if templateDir|default(false) %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build' ~ templateDir ~ '/style.css' ) }}"/>
    {% endif %}

    {{ encore_entry_link_tags(encoreEntry|default('app')) }}
    {{ encore_entry_script_tags(encoreEntry|default('app')) }}

    <!-- XAJAX -->
    {{ xajaxJS|default('')|raw }}
    <script type="text/javascript" src="{{ asset('build/js/main.js') }}"></script>
    {% if page|default(false) %}
        <script type="text/javascript">
            window.prevEntityUrl = "?page={{ page }}&mode={{ mode }}&change_entity={{ prevPlanetId }}";
            window.nextEntityUrl = "?page={{ page }}&mode={{ mode }}&change_entity={{ nextPlanetId }}";
        </script>
    {% if enableKeybinds %}
        <script type="text/javascript" src="{{ asset('build/js/keybinds.js') }}"></script>
    {% endif %}
    {% endif %}
    {% if templateDir|default(false) %}
        <script type="text/javascript" src="{{ asset('build' ~ templateDir ~ '/scripts.js' ) }}"></script>
    {% endif %}
</head>
<body>
{{ bodyTopStuff|default('')|raw }}
{% block layoutContent %}{% endblock %}
<script src="{{ asset('build/js/tooltip.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        time({{ serverTimeUnix() }}, 'servertime', 1);
    });
</script>
</body>
</html>
